{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "sdl",
            
            "command": "gcc",
            "args": [
                "${workspaceFolder}\\main.c",
                "${workspaceFolder}\\capp.c",
                "${workspaceFolder}\\base.c",
                "${workspaceFolder}\\graphics.c",
                "${workspaceFolder}\\android.c",
                "${workspaceFolder}\\exb.c",
                "${workspaceFolder}\\encode.c",
                "-L",
                "${workspaceFolder}\\",
                "-I",
                "${workspaceFolder}\\",
                "-std=c99",
                "-o",
                "${workspaceFolder}\\main.exe",
                "-lmingw32",
                "-llibfreetype-6",
                "-lzlib1",
                "-llibwebp-7",
                "-llibtiff-5",
                "-llibpng16-16",
                "-llibjpeg-9",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lSDL2_image",
                "-mwindows"
            ],
            "options": {
                
                "cwd": "E:\\app\\C-free\\mingw\\bin\\"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "sdl_linux",
            
            "command": "gcc",
            "args": [
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/capp.c",
                "${workspaceFolder}/base.c",
                "${workspaceFolder}/graphics.c",
                "${workspaceFolder}/android.c",
                "${workspaceFolder}/exb.c",
                "${workspaceFolder}/encode.c",
                "-L",
                "${workspaceFolder}/",
                "-I",
                "${workspaceFolder}/",
                "-std=c99",
                // "-static",
                "-o",
                "${workspaceFolder}/main.elf",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lSDL2_image"
            ],
            "options": {
                
                "cwd": ""
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "test",
            
            "command": "E:\\app\\C-free\\mingw\\bin\\gcc.exe",
            "args": [
                "${workspaceFolder}\\test.c",
                "${workspaceFolder}\\base.c",
                "${workspaceFolder}\\graphics.c",
                "${workspaceFolder}\\android.c",
                "${workspaceFolder}\\exb.c",
                "${workspaceFolder}\\encode.c",
                "-L${workspaceFolder}\\",
                "-std=c99",
                "-o",
                "${workspaceFolder}\\main.exe",
                "-lmingw32",
                "-llibfreetype-6",
                "-lzlib1",
                "-llibwebp-7",
                "-llibtiff-5",
                "-llibpng16-16",
                "-llibjpeg-9",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_ttf",
                "-lSDL2_image",
                "-mwindows"
            ],
            "options": {
                
                "cwd": "E:\\app\\C-free\\mingw\\bin\\"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "compile",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}